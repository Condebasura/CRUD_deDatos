extends layout

block content
  nav.box_ul
   li.logo
    h1.titulo= logo
   li.Ingreso
    a(class="Estas_en", href="/")= EstasEn
   div(class="fa-solid fa-bars")
    ul.sex_on
     li.sex_container
      a(class="sexo" , href="#")= SexoM
      a(class="sexo" , href="#")= SexoF
  dialog#modal
  form(class="form", data-form)
    label(for="name") Nombre
    input(id="name", class="nombre", type="text", placeholder="Ingresa tu Nombre", required , data-nombre)
    label(for="apellido") Apellido
    input(id="apellido", class="ap",type="text",placeholder="Ingresa tu Apellido", required, data-apellido)
    label(for="email") Email
    input(id="email", class="mail", type="email", placeholder="ejemplo@algien.com", required, data-email)
    label(for="sexo") sexo
    select(name="sexo", type="select", id="sexo", class="sex", required, data-sexo)
     option(value="") - --- -
     option(value="Masculino") Masculino 
     option(value="Femenino") Femenino
    label(for="Nacimiento") Fecha de Nacimiento 
    input(type="date", pattern="\d{2}/\d{2}/\d{4}", class="naci", id="Nacimiento", required , data-naciminto)
    label(for="telefono") Telefono 
    input(type="number", id="telefono", class="tel", placeholder="NÂ° sin el 15, solo cod de area", maxlength="12", data-telefono, required)       
